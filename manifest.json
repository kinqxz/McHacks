{
  "manifest_version": 3,
  "name": "McGill Master Scraper",
  "version": "4.0",
  "permissions": ["storage", "downloads", "unlimitedStorage"],
  "host_permissions": ["https://mycourses2.mcgill.ca/*", "https://api.gumloop.com/*"],
  "content_scripts": [
    {
      "matches": ["https://mycourses2.mcgill.ca/*"],
      "js": ["pdf.min.js", "content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pdf.worker.min.js"],
      "matches": ["https://mycourses2.mcgill.ca/*"]
    }
  ]
}