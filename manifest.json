{
  "manifest_version": 3,
  "name": "McGill Syllabuster",
  "version": "3.0",
  "icons": {
    "16": "syllabusterIcon.png",
    "48": "syllabusterIcon.png",
    "128": "syllabusterIcon.png"
  },
  "action": {
    "default_icon": "syllabusterIcon.png"
  },
  "permissions": [
    "storage",
    "downloads",
    "unlimitedStorage",
    "activeTab"
  ],
  "host_permissions": [
    "https://mycourses2.mcgill.ca/*",
    "https://api.gumloop.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mycourses2.mcgill.ca/*"
      ],
      "js": [
        "pdf.min.js",
        "content.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pdf.worker.min.js",
        "syllabusterTitle.png"
      ],
      "matches": [
        "https://mycourses2.mcgill.ca/*"
      ]
    }
  ]
}