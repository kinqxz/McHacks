{
  "manifest_version": 3,
  "name": "McGill Pro Tool",
  "version": "1.5",
  "permissions": ["storage"],
  "host_permissions": ["https://mycourses2.mcgill.ca/*"],
  "content_scripts": [
    {
      "matches": ["https://mycourses2.mcgill.ca/*"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}